[user]
    name = {{ git_user_name | default("Your Name") }}
    email = {{ git_user_email | default("your.email@example.com") }}
    signingkey = {{ git_signing_key | default("") }}

[core]
    editor = {{ git_editor | default("vim") }}
    excludesfile = ~/.config/git/ignore
    autocrlf = input

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    autoSetupRemote = true

{% if git_gpg_sign | default(false) %}
[commit]
    gpgsign = true
{% endif %}

[color]
    ui = auto
